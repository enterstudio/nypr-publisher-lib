<h1>Sub Nav</h1>
{{#liquid-bind activeTabIndex as |currentIndex|}}
<ul class="nav-links__list">
  {{#each parsedLinks as |link index|}}
    <li class="{{if (eq index currentIndex) 'is-active '}}nav-links__list-item">
      {{#if link.nav-slug}}
        <button {{action 'transition' link.nav-slug index}} class="nav-links__link">{{link.title}}</button>
      {{else}}
        <a href={{link.href}} class="nav-links__link">{{link.title}}</a>
      {{/if}}
      {{#if (eq index currentIndex)}}
        <div class="nav-bar"></div>
      {{/if}}
    </li>
  {{/each}}
</ul>
{{/liquid-bind}}
